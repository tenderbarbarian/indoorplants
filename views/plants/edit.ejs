<% include ../partials/header%>

<div class="container my-5">


      <h1>Edit <%=plant.name%></h1>


      <form class="" action="/plants/<%=plant.id%>?_method=PUT" method="post">
        <div class="form-group row">
          <label for="inputCampName" class="col-sm-2 col-form-label">Name</label>
          <div class="col-sm-10">
            <input name="plant[name]" class="form-control" id="inputCampName" value="<%=plant.name%>">
          </div>
        </div>
        <div class="form-group row">
          <label for="inputImageURL" class="col-sm-2 col-form-label">Image url</label>
          <div class="col-sm-10">
            <input name="plant[image]" class="form-control" id="inputImageURL" value="<%=plant.image%>">
          </div>
        </div>
        <div class="form-group row">
          <label for="inputWatering" class="col-sm-2 col-form-label">Watering</label>
          <div class="col-sm-10">
            <input name="plant[water]" class="form-control" id="inputWatering" value="<%=plant.water%>">
          </div>
        </div>
        <div class="form-group row">
          <label for="inputLight" class="col-sm-2 col-form-label">Light</label>
          <div class="col-sm-10">
            <input name="plant[light]" class="form-control" id="inputLight" value="<%=plant.light%>">
          </div>
        </div>
        <div class="form-group row">
          <label for="inputSoil" class="col-sm-2 col-form-label">Soil</label>
          <div class="col-sm-10">
            <input name="plant[soil]" class="form-control" id="inputSoil" value="<%=plant.soil%>">
          </div>
        </div>
        <div class="form-group row">
          <label for="inputDifficulty" class="col-sm-2 col-form-label">Difficulty</label>
          <div class="col-sm-10">
            <input name="plant[difficulty]" class="form-control" id="inputDifficulty" value="<%=plant.difficulty%>">
          </div>
        </div>
        <div class="form-group row">
          <label for="price" class="col-sm-2 col-form-label">Price</label>
          <div class="col-sm-10">
            <input name="plant[price]" type="number" min="0" step='0.01' class="form-control" id="price" value="<%=plant.price%>">
          </div>
        </div>
        <div class="form-group row">
          <label for="inputDescription" class="col-sm-2 col-form-label">Description</label>
          <div class="col-sm-10">
            <textarea class="form-control" name="plant[description]" id="inputDescription" rows="5"><%=plant.description%></textarea>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-12">
            <button type="submit" class="btn btn-primary btn-block">Edit plant</button>
          </div>
        </div>
      </form>
      <a class="btn btn-outline-primary btn-sm" href="/plants" role="button">Go Back</a>
</div>

<% include ../partials/footer%>
