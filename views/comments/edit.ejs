<% include ../partials/header %>

<div class="container my-5">
      <h1>Edit comment</h1>

      <form class="" action="/campgrounds/<%= campground_id%>/comments/<%=comment._id%>?_method=PUT" method="post">
        <div class="form-group row">
          <label for="inputComment" class="col-sm-2 col-form-label">Comment</label>
          <div class="col-sm-10">
            <textarea class="form-control" name="comment[text]" id="inputComment" rows="4"><%=comment.text%></textarea>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-12">
            <button type="submit" class="btn btn-primary btn-block">Edit Comment</button>
          </div>
        </div>
      </form>
      <a class="btn btn-outline-primary btn-sm" href="/campgrounds/<%= campground_id%>">Go Back</a>
</div>

<% include ../partials/footer %>
