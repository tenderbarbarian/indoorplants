<% include ../partials/header %>

<div class="container my-5">


      <h1>Add a comment to <%= plant.name %></h1>


      <form class="" action="/plants/<%= plant._id%>/comments" method="post">


        <div class="form-group row">
          <label for="inputComment" class="col-sm-2 col-form-label">Comment</label>
          <div class="col-sm-10">
            <textarea class="form-control" name="comment[text]" id="inputComment" rows="4" placeholder="Describe the plant"></textarea>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-12">
            <button type="submit" class="btn btn-primary btn-block">Add Comment</button>
          </div>
        </div>
      </form>
      <a class="btn btn-outline-primary btn-sm" href="/plants/<%= plant._id%>">Go Back</a>
</div>



<% include ../partials/footer %>
